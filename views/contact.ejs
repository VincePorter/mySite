<!-- Contact Form -->
<section id="contact" class='mt-3'>
	<div class="container text-start">
		<h2 class="text-white fw-bold mb-3">Contact</h2>
		<div class="card card-body text-dark p-3">
			<h3>Get in touch...</h3>
			<form action="/" method='post'>
				<div class="form-group mb-3">
					<div class="input-group input-group-lg">
						<span class="input-group-text bg-primary text-white">
							<i class="bi bi-person-fill" style='width: 60px'></i>
						</span>
						<input type="text" class="form-control my-bg-dak" name='name' placeholder='Enter your name...' required>
					</div>
				</div>
				<div class="form-group mb-3">
					<div class="input-group input-group-lg">
						<span class="input-group-text bg-primary text-white">
							<i class="bi bi-envelope-fill" style='width: 60px'></i>
						</span>
						<input type="text" class="form-control" name='email' placeholder='Enter your email address...' required>
					</div>
				</div>
				<div id='subject' class="form-group mb-3">
					<div class="input-group input-group-lg">
						<span class="input-group-text bg-primary text-white">
							<i class="bi bi-folder2-open" style='width: 60px'></i>
						</span>
						<input class="form-control my-bg-dark" name="subject" placeholder="Enter a subject...">
					</div>
				</div>
				<div class="form-group mb-3">
					<div class="input-group input-group-lg">
						<textarea class="form-control my-bg-dark" name='message' placeholder='Enter your message...' required></textarea>
					</div>
				</div>
				<div class='d-grid'>
					<button class='btn btn-primary btn-block btn-lg'>
						<div class='row align-items-center text-white'>
							<div class="col d-grid gap-2 d-md-flex justify-content-end">
								<i class="bi bi-envelope-fill"></i>
							</div>
							<div class="col mt-3 d-grid gap-2 d-md-flex">
								<p>Send</p>
							</div>
						</div>
					</button>
				</div>
			</form>
		</div>
	</div>
</section>